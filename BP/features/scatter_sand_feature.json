{
    "format_version": "1.13.0",
    "minecraft:scatter_feature": {
        "description": {
            "identifier": "cryptic_depths:scatter_sand_feature"
        },
        "iterations": "math.random_integer(15, 25)",
        "x": {
            "extent": [
                0,
                8
            ],
            "distribution": "gaussian"
        },
        "z": {
            "extent": [
                0,
                8
            ],
            "distribution": "gaussian"
        },
        "y": "q.heightmap(v.worldx, v.worldz) -1",
        "places_feature": "cryptic_depths:select_sand_feature" //Weighted random feature identifier
    }
}